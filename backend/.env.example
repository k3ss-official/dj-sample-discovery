# DJ Sample Discovery - Environment Configuration
# Copy this file to .env and fill in your API keys

# Spotify API (optional but recommended for better search)
# Get credentials at: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Discogs API (optional for detailed credits)
# Get token at: https://www.discogs.com/settings/developers
DISCOGS_TOKEN=

# Data directory (optional, defaults to ~/DJ_Samples)
DJ_DATA_DIR=

# Server settings (optional)
DJ_HOST=127.0.0.1
DJ_PORT=5555
DJ_DEBUG=false
DJ_LOG_LEVEL=INFO
