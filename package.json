{
  "name": "dj-sample-discovery",
  "version": "1.0.0",
  "description": "AI-powered DJ track discovery and intelligent sampling tool with stem separation",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:react": "vite",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview",
    "python:install": "cd backend && python3 -m pip install -r requirements.txt",
    "python:dev": "cd backend && python3 server.py",
    "setup": "npm install && npm run python:install",
    "test": "vitest"
  },
  "keywords": [
    "dj",
    "sampling",
    "music",
    "audio",
    "stem-separation",
    "demucs",
    "electron"
  ],
  "author": "Tony",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "wavesurfer.js": "^7.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.djsampler.app",
    "productName": "DJ Sample Discovery",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png"
    },
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      }
    ]
  }
}
